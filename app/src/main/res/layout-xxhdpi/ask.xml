<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="@drawable/pitanje"
    android:elevation="0dp"
    android:fitsSystemWindows="false"
    app:layout_constraintGuide_percent="0.5">

    <EditText
        android:id="@+id/name_ask"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="128dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Vaše ime i prezime"
        android:inputType="textPersonName"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#000"
        android:textColorHint="#999"
        android:theme="@android:style/Theme.Material"/>

    <EditText
        android:id="@+id/email_ask"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Vaša email adresa"
        android:inputType="textEmailAddress"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_ask"
        android:textColor="#000"
        android:textColorHint="#999"
        android:theme="@android:style/Theme.Material" />

    <EditText
        android:id="@+id/text_ask"
        android:layout_width="274dp"
        android:layout_height="267dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="217dp"
        android:ems="10"
        android:fitsSystemWindows="false"
        android:gravity="start"
        android:hint="Pitajte nas"
        android:inputType="textMultiLine"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_optimizationLevel="all"
        app:layout_constraintHorizontal_bias="0.571"
        android:textColor="#000"
        android:textColorHint="#999"
        android:theme="@android:style/Theme.Material"/>

    <Button
        android:id="@+id/send_ask"
        android:layout_width="109dp"
        android:layout_height="92dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:width="1dp"
        android:background="@android:color/transparent"
        android:elevation="24dp"
        android:fitsSystemWindows="true"
        android:scaleX="1"
        android:scaleY="1"
        android:textScaleX="1"
        android:transformPivotX="1dp"
        android:transformPivotY="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:layout_optimizationLevel="all"
        app:layout_constraintHorizontal_bias="0.502" />
</android.support.constraint.ConstraintLayout>
